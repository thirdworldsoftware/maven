{
    "name": "maven",
    "version": "1.0.0",
    "description": "Be all and end all Discord bot for your server",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc --noEmit -p src",
        "watch": "tsc --noEmit -p src -w",
        "start": "pnpm build && pnpm start:prod",
        "start:prod": "ts-node -r tsconfig-paths/register -P ./src/tsconfig.json src/main",
        "prisma:gen": "prisma generate"
    },
    "contributors": [
        {
            "name": "uwuLegacy",
            "url": "https://github.com/uwuLegacy"
        },
        {
            "name": "synesta",
            "url": "https://github.com/synesta"
        }
    ],
    "license": "Apache-2.0",
    "devDependencies": {
        "@sapphire/ts-config": "^3.1.4",
        "@types/node": "^16.11.9",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.4.1",
        "prisma": "^3.5.0",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.2"
    },
    "dependencies": {
        "@ogma/common": "^1.0.0",
