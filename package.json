        "@sapphire/decorators": "^3.1.4",
        "@sapphire/discord.js-utilities": "^4.1.3",
        "@sapphire/framework": "^2.1.4",
        "@sapphire/pieces": "^3.1.1",
        "@sapphire/plugin-editable-commands": "^1.1.0",
        "@sapphire/plugin-subcommands": "^2.1.0",
        "@sapphire/utilities": "^3.1.0",
        "discord.js": "^13.3.1",
        "dotenv": "^10.0.0",
        "tslib": "^2.3.1"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
