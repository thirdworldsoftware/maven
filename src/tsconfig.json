{
    "extends": "../tsconfig.base.json",

    "compilerOptions": {
        "allowJs": true,

        "outDir": "../dist",
        "rootDir": ".",
        "baseUrl": ".",

        "paths": {
            "@lib/*": ["./lib/*"],
            "@config/*": ["./lib/config/*"],
            "@structures/*": ["./lib/structures/*"]
        },
        "composite": true
    },

    "include": [".", "./**/*.json"],
    "exclude": ["./tsconfig.json"]
}
